
public class Q12 {
	public static void main(String[] args) {
        // Initialize an array with some values
        int[] numbers = {5, 10, 15, 2, 8, 23, 4};
        
        // Initialize the maximum and minimum values
        int max = numbers[0];
        int min = numbers[0];
        
        // Loop through the array to find the maximum and minimum values
        for (int i = 1; i < numbers.length; i++) {
            if (numbers[i] > max) {
                max = numbers[i]; // Update maximum value
            }
            if (numbers[i] < min) {
                min = numbers[i]; // Update minimum value
            }
        }
        
        // Print the maximum and minimum values
        System.out.println("The maximum value in the array is: " + max);
        System.out.println("The minimum value in the array is: " + min);
    }
}
